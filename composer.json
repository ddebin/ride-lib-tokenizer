{
    "name": "ride/lib-tokenizer",
    "description": "Tokenizer library of the Ride framework.",
    "authors": [
        {
            "name": "Joris Vandeweerd",
            "email": "joris@statik.be"
        }
    ],
    "require": {
        "php": "^7.1 || ^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.4",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpunit/phpunit": "^7.0 || ^8.0 || ^9.0"
    },
    "config": {
      "sort-packages": true
    },
    "autoload": {
        "psr-0": {
            "ride\\library\\tokenizer\\": ["src/"]
        }
    },
    "autoload-dev": {
        "psr-0": {
            "ride\\library\\tokenizer\\": ["test/src/"]
        }
    },
    "scripts": {
        "phpstan": "@php phpstan analyse -l max -c phpstan.neon src test .php-cs-fixer.php",
        "php-cs-fixer": "@php php-cs-fixer fix --allow-risky=yes",
        "php-cs-fixer-dry-run": "@php php-cs-fixer fix --dry-run --allow-risky=yes",
        "phpunit": "@php phpunit",
        "test": [
            "@php-cs-fixer-dry-run",
            "@phpstan",
            "@phpunit"
        ]
    }
}
